#!/usr/bin/env bash
# This script manages the manage_my_process script

# Path to manage_my_process script
MANAGE_SCRIPT="./manage_my_process"

# Path to PID file
PID_FILE="/var/run/my_process.pid"

case "$1" in
    start)
        # Start the process
        echo "Starting manage_my_process..."
        $MANAGE_SCRIPT &
        echo $! > $PID_FILE
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process
        echo "Stopping manage_my_process..."
        kill "$(cat $PID_FILE)"
        rm -f $PID_FILE
        echo "manage_my_process stopped"
        ;;
    restart)
        # Restart the process
        echo "Restarting manage_my_process..."
        $0 stop
        sleep 1
        $0 start
        echo "manage_my_process restarted"
        ;;
    *)
        # Invalid argument
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0

